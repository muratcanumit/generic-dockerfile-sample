<plugin>
    <groupId>com.spotify</groupId>
    <artifactId>dockerfile-maven-plugin</artifactId>
    <version>1.4.10</version>
    <executions>
        <execution>
            <id>default</id>
            <goals>
                <goal>build</goal>
            </goals>
        </execution>
    </executions>
    <configuration>
        <repository>name/${project.name}</repository>
        <tag>${project.version}</tag>
        <skipDockerInfo>true</skipDockerInfo>
    </configuration>
</plugin>